extends layout.pug

block content 
  main(class='mdl-layout')
    div(class='mdl-grid')
      div(class='mdl-layout-spacer')
      form(method='post' action='/login')
        div(class='mdl-card mdl-shadow--6dp')
          div(class='mdl-card__title mdl-color--primary mdl-color-text--white')
            h2(class='mdl-card__title-text') Login
          div(class='mdl-card__supporting-text')
             div(class='mdl-textfield mdl-js-textfield')
               input(class='mdl-textfield__input', name='username', type='text')
               label(class='mdl-textfield__label', for='username') Username
             div(class='mdl-textfield mdl-js-textfield')
               input(class='mdl-textfield__input', name='password', type='password')
               label(class='mdl-textfield__label', for='password') Password
          div(class='mdl-card__actions mdl-card--border')
            input(class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', type='submit')
      div(class='mdl-layout-spacer')
